<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DoorDashClone.ViewModels"
             x:Class="DoorDashClone.Views.HomePage">

    <ContentPage.BindingContext>
        <viewmodels:HomeViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Loading Indicator -->
        <ActivityIndicator IsVisible="{Binding IsLoading}"
                          IsRunning="{Binding IsLoading}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Grid.RowSpan="3" />

        <!-- Location Header -->
        <Grid Grid.Row="0" Padding="15,10" ColumnDefinitions="*,Auto">
            <VerticalStackLayout>
                <Label Text="Delivery to" TextColor="Gray" FontSize="14"/>
                <Grid ColumnDefinitions="Auto,*">
                    <Image Source="location.png" 
                           HeightRequest="20" 
                           WidthRequest="20"/>
                    <Label Grid.Column="1" 
                           Text="Current Location" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                </Grid>
            </VerticalStackLayout>
            <Frame Grid.Column="1" 
                   HeightRequest="40" 
                   WidthRequest="40" 
                   CornerRadius="20" 
                   Padding="0"
                   BorderColor="LightGray">
                <Image Source="profile.png" 
                       Aspect="AspectFill"/>
            </Frame>
        </Grid>

        <!-- Categories ScrollView -->
        <ScrollView Grid.Row="1" 
                   Orientation="Horizontal" 
                   Margin="0,10">
            <HorizontalStackLayout Spacing="10" 
                                 Padding="15,0">
                <Frame BorderColor="LightGray" 
                       CornerRadius="25" 
                       HeightRequest="50"
                       Padding="15,0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, 
                                             Path=SelectCategoryCommand}"
                                             CommandParameter="" />
                    </Frame.GestureRecognizers>
                    <Label Text="All" 
                           VerticalOptions="Center"/>
                </Frame>
                <!-- Add more category frames with similar gesture recognizers -->
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Restaurant List -->
        <CollectionView Grid.Row="2" 
                       ItemsSource="{Binding Restaurants}"
                       Margin="15,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,10" 
                           Padding="0" 
                           BorderColor="Transparent">
                        <Grid RowDefinitions="160,Auto">
                            <Image Aspect="AspectFill"
                                   Source="{Binding ImageUrl}"/>
                            <VerticalStackLayout Grid.Row="1" 
                                               Padding="10">
                                <Label Text="{Binding Name}" 
                                       FontAttributes="Bold" 
                                       FontSize="16"/>
                                <Label Text="{Binding Description}" 
                                       TextColor="Gray"/>
                                <Grid ColumnDefinitions="Auto,*,Auto" 
                                      Margin="0,5,0,0">
                                    <Label Text="{Binding Rating}" 
                                           FontSize="14"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding DeliveryTime}" 
                                           Margin="10,0"/>
                                    <Label Grid.Column="2" 
                                           Text="{Binding DeliveryFee}"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>