<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DoorDashClone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DoorDashClone.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="DoorDashClone">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent 
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="HomePage" />
        </Tab>

        <Tab Title="Search" Icon="search.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:SearchPage}"
                Route="SearchPage" />
        </Tab>

        <Tab Title="Orders" Icon="orders.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:OrdersPage}"
                Route="OrdersPage" />
        </Tab>

        <Tab Title="Account" Icon="account.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:AccountPage}"
                Route="AccountPage" />
        </Tab>
    </TabBar>

</Shell>